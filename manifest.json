{
  "manifest_version": 3,
  "name": "VodozeDOM",
  "version": "1.0.0",
  "description": "End-to-end encryption for web chat messages",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://web.bale.ai/*"
  ],
  "background": {
    "scripts": ["src/background/background.ts", "src/utils/messageSchema.ts"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://web.bale.ai/*"],
      "js": ["src/content/content.ts", "src/utils/messageSchema.ts"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://web.bale.ai/*"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "VodozeDOM"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
